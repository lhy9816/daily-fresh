<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/form_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/biaoti"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ed4255">
            <TextView
                android:text="Daily Fresh"
                android:id="@+id/text_title"
                android:textSize="21sp"
                android:textColor="#fff"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_backward"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop ="7dp"
                android:layout_marginLeft="12dp"
                android:drawablePadding="6dp"
                android:background="@drawable/ic_arrow_back_dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button_list"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:drawablePadding="6dp"
                android:background="@drawable/ic_list_dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:visibility="invisible" />
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily\n    Fresh"
        android:layout_gravity="center_horizontal"
        android:typeface="sans"
        android:layout_marginTop="25dp"
        android:textSize="35dp"
        />

    <EditText
        android:id="@+id/cg_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_edittext"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/input_context"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/cg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/input_context"
        android:textSize="17sp" />
    <EditText
        android:id="@+id/cg_phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/input_context"
        android:textSize="17sp" />
    <EditText
        android:id="@+id/cg_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/input_context"
        android:textSize="17sp" />

    <Button
        android:id="@+id/cg_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_btn_style"
        android:text="确认修改"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal" >

    </LinearLayout>

</LinearLayout>