<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_container"
    android:background="@color/form_background"
    android:orientation="vertical" >

    <com.example.lenovo.dailyfresh.login.MyVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily\n    Fresh"
        android:textColor="#EDD6BB"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:typeface="sans"
        android:layout_marginTop="70dp"
        android:textSize="40dp"
        />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/translusent"
        android:hint="@string/username"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/input_context"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/translusent"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/input_context"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/chb_rempwd"
            android:textColor="#9Eb1D8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="330dp"
            android:text="记住密码"/>

        <TextView
            android:textColor="#9Eb1D8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户？"
            android:textSize="17dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="330dp"
            android:layout_marginRight="0dp"
            />

        <Button
            android:id="@+id/new_usr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="330dp"
            android:layout_marginRight="20dp"
            android:text="立即注册"
            android:background="@drawable/login_btn_style"
            android:textColor="#FFFFFF"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/login_btn_style"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />





</RelativeLayout>